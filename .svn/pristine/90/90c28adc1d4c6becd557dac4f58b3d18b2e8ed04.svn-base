
/*footer.css*/
footer{
    display:flex;
    justify-content: start;
    width:100%;
    height:11.6rem;
    background:#f1f1f1;
    padding-top:2.3rem;
    letter-spacing: 1px;

    img{
        height:4rem;
        object-fit: contain;
        padding: 0 1.25rem;
        width: 7.5rem;
        box-sizing: content-box;
    }
    .footer-text-side{
        display:flex;
        flex-direction:column;
        gap:.75rem;
        padding:.1rem 1.7rem;
        
        p{
            font-size:var(--font16);
            text-align:left;
            color:rgba(var(--black),.75);
            font-family:'PT';
            font-weight:300;
            word-break: keep-all;

            &.footer-text-bold{
                font-weight:normal;
            }
        }
    }
    .footer-login-side{
        margin-left:auto;
        min-width:5rem;

        .footer-login-button{
            display:flex;
            align-items:flex-start;
            gap:.5rem;
            

            p{
                padding: 0.15rem 0;
                font-size:var(--font16);
                color:rgba(var(--royalblue),.35);
            }
        }
    }
    
}

@media (max-width: 767px) {
    body footer{
        height:auto;
        padding-top:1.75rem;

        img{
            padding: 0 1rem;
        }

        .web-common-inner{
            flex-direction:column;
            gap: 1rem;
        }

        .footer-text-side{
            padding: 0 1rem;
            gap:.25rem;

            > p{
                font-size:var(--font14);
                line-height: 1.5;
            }
        }

        .footer-login-side{
            padding: 0.5rem;
            background: rgba(var(--royalblue),.05);
            width: 100%;

            .footer-login-button{
                margin-left: auto;
            }
        }
    }

    

    
}